@model IEnumerable<IdentityRole>
@{ 
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="admin">Add New Role</a>
    foreach(var role in Model)
                {
                    <div class="card mb-3">
                        <div class="card-header">Role ID:@role.Id</div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditRole" asp-controller="admin" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-primary">Delete</a>
                    </div>
                }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet...
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use Create Role Button to create role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="admin" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}