@model CreateBookViewModel

<h2>Edit Book Event</h2>

<form asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventType"></label>
        <input asp-for="EventType" class="form-control" placeholder="Public/Private" />
        <span asp-validation-for="EventType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DurationInHours"></label>
        <input asp-for="DurationInHours" class="form-control" />
        <span asp-validation-for="DurationInHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OtherDetails"></label>
        <input asp-for="OtherDetails" class="form-control" />
        <span asp-validation-for="OtherDetails" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InviteByEmail"></label>
        <input asp-for="InviteByEmail" class="form-control" />
        <span asp-validation-for="InviteByEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

